<Window x:Class="_313616_IPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_313616_IPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Length"/>
        <TextBox x:Name="txtLength"/>
        <Label Content="Width"/>
        <TextBox x:Name="txtWidth"/>
        <Button x:Name="btnCalculate" Content="Calculate Area" Click="BtnCalculate_Click"/>
        <Label x:Name="lblOutput"/>
    </StackPanel>
</Window>
